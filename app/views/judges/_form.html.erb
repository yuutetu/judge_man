<%= form_for(@judge) do |f| %>
  <% if @judge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@judge.errors.count, "error") %> prohibited this judge from being saved:</h2>

      <ul>
      <% @judge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :select_type %><br />
    <%= f.radio_button :select_type, 0 %> 選択式<br />
    <%= f.radio_button :select_type, 1 %> 記入式
  </div>
  <div class="field select_items_form">
    <label for="judge_select_items">選択項目(カンマ区切り)</label><br />
    <%= text_field_tag "judge[select_items]", "", :id => "judge_select_items" %>
  </div>
  <div class="field">
    <%= f.label :select_type %><br />
    <%= f.radio_button :select_type, 0 %> 選択式<br />
    <%= f.radio_button :select_type, 1 %> 記入式
  </div>
  <div class="field">
    <%= f.label :judge_type %><br />
    <%= f.radio_button :judge_type, 0 %> ランダム<br />
    <%= f.radio_button :judge_type, 1 %> 多数決重視
  </div>
  <div class="field">
    <%= f.label :judge_time %><br />
    <%= f.datetime_select :judge_time %>
  </div>
  <div class="field">
    <%= f.label :remove_time %><br />
    <%= f.datetime_select :remove_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
